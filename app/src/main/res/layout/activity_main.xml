<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:orientation="horizontal">

    <com.jc666.waveecglib.view.WaveEcgView
        android:id="@+id/wave_view1"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:draw_mode="loop"
        app:max_value="30"
        app:wave_background="#000000"
        app:wave_line_color="#ffff00"
        app:wave_line_width="20" />

    <com.jc666.waveecglib.view.WaveEcgView
        android:id="@+id/wave_view2"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:draw_mode="normal"
        app:grid_visible="true"
        app:wave_line_stroke_width="5" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.jc666.waveecglib.view.WaveEcgView
            android:id="@+id/wave_view3"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:draw_mode="loop"
            app:max_value="30"
            app:wave_background="#000000"
            app:wave_line_color="#ffff00"
            app:wave_line_width="20" />

        <com.jc666.waveecglib.view.WaveEcgView
            android:id="@+id/wave_view4"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:draw_mode="normal"
            app:grid_visible="true"
            app:wave_line_stroke_width="5" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.jc666.waveecglib.view.WaveEcgView
            android:id="@+id/wave_view5"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:draw_mode="loop"
            app:max_value="30"
            app:wave_background="#000000"
            app:wave_line_color="#ffff00"
            app:wave_line_width="20" />

        <com.jc666.waveecglib.view.WaveEcgView
            android:id="@+id/wave_view6"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:draw_mode="normal"
            app:grid_visible="true"
            app:wave_line_stroke_width="5" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.jc666.waveecglib.view.WaveEcgView
            android:id="@+id/wave_view7"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:draw_mode="loop"
            app:max_value="30"
            app:wave_background="#000000"
            app:wave_line_color="#ffff00"
            app:wave_line_width="20" />

        <com.jc666.waveecglib.view.WaveEcgView
            android:id="@+id/wave_view8"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:draw_mode="normal"
            app:grid_visible="true"
            app:wave_line_stroke_width="5" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.jc666.waveecglib.view.WaveEcgView
            android:id="@+id/wave_view9"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:draw_mode="loop"
            app:max_value="30"
            app:wave_background="#000000"
            app:wave_line_color="#ffff00"
            app:wave_line_width="20" />

        <com.jc666.waveecglib.view.WaveEcgView
            android:id="@+id/wave_view10"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:draw_mode="loop"
            app:grid_visible="true"
            app:wave_line_stroke_width="5" />

    </LinearLayout>

</LinearLayout>

